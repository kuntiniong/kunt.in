---
export interface Props {
  title: string;
  description?: string;
  css?: string;
}

const { title, description = "Personal Website", css } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
    
    <!-- thumbnail -->
    <meta property="og:image" content="https://kunt.in/images/thumbnail.png" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://kunt.in/" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content="Kun Tin Iong" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />

    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/css/svg.css" />
    {css && <link rel="stylesheet" type="text/css" href={`/css/${css}.css`} />}
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/images/favicon.png" as="image" type="image/png" />
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" as="script" />
    <link rel="preload" href="/css/material-symbols.css" as="style" />

    <!-- gsap library and local material symbols -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" defer></script>
    <link rel="stylesheet" href="/css/material-symbols.css" />

    <link rel="icon" href="/images/favicon.png" />
    <title>{title}</title>
    
    <slot name="head" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Kun Tin Iong",
      "url": "https://kunt.in",
      "sameAs": [
        "https://github.com/kuntiniong"
      ],
      "jobTitle": "Software Developer",
      "description": "Personal website showcasing projects in web development, machine learning, and data science",
      "knowsAbout": ["JavaScript", "Python", "React", "Machine Learning", "Web Development"],
    }
    </script>
  </head>

  <body>
    <!-- navigation bar -->
    <div class="kuntiniong">
      <a href="/#home">Kun Tin Iong</a>
    </div>

    <nav class="nav-bar">
      <ul class="tab-list">
        <li class="tab"><a href="/#about">About</a></li>
        <li class="tab"><a href="/#projects">Projects</a></li>
        <li class="tab"><a href="/#courses">Courses</a></li>
        <li class="tab"><a href="/#contact">Contact</a></li>
        <!-- dark mode toggle -->
        <button class="dark-mode-button" id="darkModeToggle">
          <span class="dark-mode-icon dark_mode"></span>
        </button>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <slot name="body" />
    
    <script>
      document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const id = this.getAttribute('href').substr(2);
          const element = document.querySelector('#' + id);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth'
            });
          }
        });
      });
    </script>
  </body>
</html>