---
export interface Props {
  title: string;
  description?: string;
  css?: string;
}

const { title, description = "Personal Website", css } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
    
    <!-- thumbnail -->
    <meta property="og:image" content="https://kunt.in/images/thumbnail.png" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://kunt.in/" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content="Kun Tin Iong" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#000000" />

    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/css/svg.css" />
    {css && <link rel="stylesheet" type="text/css" href={`/css/${css}.css`} />}
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/images/favicon.png" as="image" type="image/png" />
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" as="script" />
    <link rel="preload" href="/css/material-symbols.css" as="style" />

    <!-- gsap library and local material symbols -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" defer></script>
    <link rel="stylesheet" href="/css/material-symbols.css" />

    <link rel="icon" href="/images/favicon.png" />
    <title>{title}</title>
    
    <slot name="head" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Kun Tin Iong",
      "url": "https://kunt.in",
      "sameAs": [
        "https://github.com/kuntiniong"
      ],
      "jobTitle": "Software Developer",
      "description": "Personal website showcasing projects in web development, machine learning, and data science",
      "knowsAbout": ["JavaScript", "Python", "React", "Machine Learning", "Web Development"],
    }
    </script>

    <style>
      /* Mobile Hamburger Menu Styles */
      .hamburger-menu {
        display: none;
        flex-direction: column;
        cursor: pointer;
        padding: 10px;
        z-index: 1001;
      }

      .hamburger-menu span {
        width: 25px;
        height: 3px;
        background-color: var(--text-color, #333);
        margin: 3px 0;
        transition: 0.3s;
      }

      .hamburger-menu.active span:nth-child(1) {
        transform: rotate(-45deg) translate(-5px, 6px);
      }

      .hamburger-menu.active span:nth-child(2) {
        opacity: 0;
      }

      .hamburger-menu.active span:nth-child(3) {
        transform: rotate(45deg) translate(-5px, -6px);
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: -100%;
        width: 300px;
        height: 100vh;
        background-color: var(--background-color);
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        transition: left 0.3s ease;
        z-index: 1000;
        padding: 80px 20px 20px;
        overflow: hidden;
      }

      .sidebar.active {
        left: 0;
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar li {
        margin: 20px 0;
      }

      .sidebar a {
        color: var(--text-color);
        text-decoration: none;
        font-size: 1.2rem;
        display: block;
        padding: 10px 0;
        border-bottom: 1px solid var(--muted-color);
      }

      .sidebar .dark-mode-button {
        margin-top: 30px;
        background: none;
        border: 1px solid var(--muted-color);
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        color: var(--text-color);
      }

      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
      }

      .overlay.active {
        opacity: 1;
        visibility: visible;
      }

      @media (max-width: 768px) {
        .hamburger-menu {
          display: flex;
          position: absolute;
          right: 20px;
          top: 50%;
          transform: translateY(-50%);
        }

        .nav-bar {
          display: none;
        }

        .kuntiniong {
          display: flex;
          justify-content: space-between;
          align-items: center;
          position: relative;
          padding: 0 20px;
        }

        .kuntiniong a {
          flex: 1;
          text-align: left;
        }
      }

      @media (min-width: 769px) {
        .sidebar {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <!-- Overlay for mobile menu -->
    <div class="overlay" id="overlay"></div>

    <!-- Mobile Sidebar -->
    <div class="sidebar" id="sidebar">
      <ul>
        <li><a href="/#about">About</a></li>
        <li><a href="/#projects">Projects</a></li>
        <li><a href="/#courses">Courses</a></li>
        <li><a href="/#contact">Contact</a></li>
      </ul>
      <button class="dark-mode-button" id="sidebarDarkModeToggle">
        <span class="dark-mode-icon dark_mode"></span>
      </button>
    </div>

    <!-- navigation bar -->
    <div class="kuntiniong">
      <a href="/#home">Kun Tin Iong</a>
      <!-- Hamburger Menu -->
      <div class="hamburger-menu" id="hamburgerMenu">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <nav class="nav-bar">
      <ul class="tab-list">
        <li class="tab"><a href="/#about">About</a></li>
        <li class="tab"><a href="/#projects">Projects</a></li>
        <li class="tab"><a href="/#courses">Courses</a></li>
        <li class="tab"><a href="/#contact">Contact</a></li>
        <!-- dark mode toggle -->
        <button class="dark-mode-button" id="darkModeToggle">
          <span class="dark-mode-icon dark_mode"></span>
        </button>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <slot name="body" />
    
    <script>
      // Smooth scrolling for hash links
      document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const id = this.getAttribute('href').substr(2);
          const element = document.querySelector('#' + id);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth'
            });
            // Close sidebar if open
            closeSidebar();
          }
        });
      });

      // Mobile menu functionality
      const hamburgerMenu = document.getElementById('hamburgerMenu');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('overlay');
      
      function openSidebar() {
        if (hamburgerMenu) hamburgerMenu.classList.add('active');
        if (sidebar) sidebar.classList.add('active');
        if (overlay) overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
      
      function closeSidebar() {
        if (hamburgerMenu) hamburgerMenu.classList.remove('active');
        if (sidebar) sidebar.classList.remove('active');
        if (overlay) overlay.classList.remove('active');
        document.body.style.overflow = '';
      }
      
      if (hamburgerMenu) {
        hamburgerMenu.addEventListener('click', () => {
          if (sidebar && sidebar.classList.contains('active')) {
            closeSidebar();
          } else {
            openSidebar();
          }
        });
      }
      
      if (overlay) {
        overlay.addEventListener('click', closeSidebar);
      }
      
      // Sync dark mode buttons
      const darkModeToggle = document.getElementById('darkModeToggle');
      const sidebarDarkModeToggle = document.getElementById('sidebarDarkModeToggle');
      
      if (darkModeToggle && sidebarDarkModeToggle) {
        sidebarDarkModeToggle.addEventListener('click', () => {
          // Trigger the same dark mode logic as the main button
          darkModeToggle.click();
          closeSidebar();
        });
      }
    </script>
  </body>
</html>