---
export interface Props {
  title: string;
  description?: string;
  css?: string;
}

const { title, description = "Personal Website", css } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
    
    <!-- thumbnail -->
    <meta property="og:image" content="https://raw.githubusercontent.com/kuntiniong/kuntiniong.github.io/main/images/thumbnail.png" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://kuntiniong.github.io/" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/css/svg.css" />
    {css && <link rel="stylesheet" type="text/css" href={`/css/${css}.css`} />}

    <!-- gsap library and google svg icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js" is:inline></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=dark_mode,light_mode" />

    <link rel="icon" href="/images/favicon.png" />
    <title>{title}</title>
  </head>

  <body>
    <!-- navigation bar -->
    <div class="kuntiniong">
      <a href="/">Kun Tin Iong</a>
    </div>

    <nav class="nav-bar">
      <ul class="tab-list">
        <li class="tab"><a href="/about">About</a></li>
        <li class="tab"><a href="/projects">Projects</a></li>
        <li class="tab"><a href="/courses">Courses</a></li>
        <li class="tab"><a href="/contact">Contact</a></li>
        <!-- dark mode toggle -->
        <button class="dark-mode-button" id="darkModeToggle">
          <span class="material-symbols-outlined"> dark_mode </span>
        </button>
      </ul>
    </nav>

    <main>
      <slot />
    </main>

    <script src="/js/dark-mode.js" is:inline></script>
    <script src="/js/animation.js" is:inline></script>
  </body>
</html>
